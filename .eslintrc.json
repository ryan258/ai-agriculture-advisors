{
    "env": {
        "node": true,
        "es2021": true,
        "browser": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "always"
        ]
    }
}